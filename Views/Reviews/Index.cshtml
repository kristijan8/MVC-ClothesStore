@model IEnumerable<cstore.Models.Reviews>

@{
    ViewData["Title"] = "Index";
}

<style>
    .background-photo {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        opacity: 0.1;
        z-index: -1;
    }

    .reviews-container {
        background-color: transparent;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }

    .reviews-header {
        font-size: 24px;
        margin-bottom: 20px;
    }

    .review {
        display: flex;
        align-items: center;
        font-size: 18px;
        padding: 10px; /* Add spacing between reviews */
        margin-bottom: 20px; /* Add margin to separate reviews */
        background-color: white; /* Add a background color to separate reviews visually */
        border-radius: 10px; /* Add rounded corners for a nicer look */
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1); /* Add a subtle shadow */
    }

    .review-details {
        flex: 1;
        padding: 0 10px;
    }

    .review-actions {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
    }
</style>

<h1 class="reviews-header">Reviews</h1>

<div class="background-photo" style="background-image: url('/images/review.jpg');"></div>

<div class="container reviews-container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <div class="review">
                    <div class="review-details">
                        <p><b>App User:</b> @Html.DisplayFor(modelItem => item.AppUser)</p>
                        <p><b>Comment:</b> @Html.DisplayFor(modelItem => item.Comment)</p>
                        <p><b>Rating:</b> @Html.DisplayFor(modelItem => item.Rating)</p>
                        <p><b>Product ID:</b> @Html.DisplayFor(modelItem => item.Product.Id)</p>
                    </div>
                    <div class="review-actions">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        }
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

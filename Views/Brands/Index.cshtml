@model IEnumerable<cstore.Models.Brand>

@{
    ViewData["Title"] = "Index";
}

<h1>Brands</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<tbody>
    <ul class="product-list">
        @foreach (var item in Model)
        {
            <li class="product-item">
                <div class="product-image-container">
                    <img src="\images\nike-shoes-streetwear-nike-art-prem-vishal.jpg" alt="Image Description" width="350" height="350">

                </div>
                <h1>
                    <b> @Html.DisplayFor(modelItem => item.Name)</b>
                </h1>
                <h1>
                    @* @Html.DisplayFor(modelItem => item.Description)*@
                    <br>
                    <a href="https://www.footlocker.eu/" target="_blank">Check the latest Styles</a>
                </h1>
                <div>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>

            </li>
        }
    </ul>
</tbody>
